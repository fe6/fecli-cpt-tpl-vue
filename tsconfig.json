{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "noImplicitThis": true,
    "newLine": "lf",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
